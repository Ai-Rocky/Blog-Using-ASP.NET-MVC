@model Blog.ViewModels.ArticleViewModel
@{
	ViewBag.Title = "Details";
	Layout = "~/Views/Home/_MasterPage.cshtml";
}

<div class="container mt-5">
	<div class="row">

		<div class="col-md-8">
			<div class="card mb-3">
				<div class="card-body">
					<h1 class="display-4">@Model.details.Title</h1>
					<p class="card-text mt-3">
						<small class="text-muted">
							<span class="mr-3"><img src="../../Images/@Model.details.tbl_blogger.Image" class="rounded-circle" width="25" /> <a href="/Home/Profile/@Model.details.BloggerID">@Model.details.tbl_blogger.Name</a></span>
							<span class="mr-3"><i class="fas fa-book"></i> <a href="/Home/Category/@Model.details.CategoryID">@Model.details.tbl_category.Name</a></span>
							<span class="mr-3"><i class="far fa-calendar-alt"></i> @Model.details.Date</span>
							<span><i class="fas fa-eye"></i> @Model.details.Views</span>
						</small>
					</p>
					<img class="card-img-top mb-3 w-100" src="../../images/@Model.details.Image" alt="Card image cap">
					<p class="lead" style="font-weight: normal;">@Html.Raw(Model.details.Details)</p>
				</div>
			</div>
			<div class="fb-comments" data-href="http://localhost:6142/Home/Details/@Model.details.ID" data-width="100%" data-numposts="5"></div>
		</div>

		<div class="col-md-4">
			<h3 class="text-center">Related Article</h3>
		@foreach (var related in Model.related)
		{
			<div class="card mb-3">
				<div class="card-body">
					<h4 class=""><a href="/Home/Details/@related.ID" style="text-decoration: none;color: #212529;">@related.Title</a></h4>
					<p class="card-text">
						<small class="text-muted mt-3">
							<span class="mr-3"><img src="../../Images/@related.tbl_blogger.Image" class="rounded-circle" width="25" /> <a href="/Home/Profile/@related.BloggerID">@related.tbl_blogger.Name</a></span>
							<span><i class="fas fa-eye"></i> @related.Views</span>
						</small>
					</p>
				</div>
			</div>
		}
		</div>
	</div>
</div>

